
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    <form id="myForm">
        <div class="col-lg-6 col-lg-offset-3">
            Usuario
            <input type="text" name="user" value="" />
            Contraseña
            <input type="password" name="pass" value="" />
            <input type="submit" class="btn btn-success" name=" value="Entrar" />
        </div>
    </form>



</div>

@section Scripts{

    <script>
$(document).ready(function() {
    $("#myForm").submit(function(e) {
        e.preventDefault();
        url = "@Url.Content("~/Acces/Enter")";
        parametro = $(this).serialize();
        $.post(url, parametro, function(data){
            if (data == "1") {
                document.location.href = "@Url.Content("~/Home/List")";
            } else if (data == "-1") {
                alert(" ingreso incorrecto");
                document.location.href = "@Url.Content("~/Acces/Index")";


            }else {
                    alert(data);
        }
        })
    })
})

    </script>

}


